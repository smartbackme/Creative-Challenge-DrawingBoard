<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/btnJianBianStyle"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Hi. Welcome 互动画板"
        android:layout_marginTop="80dp"
        />

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入昵称(仅支持英文数字)"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize16"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLength="10"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
        app:lib_stroke_width="2dp"
        app:lib_stroke_position="bottom"
        app:lib_stroke_color="@color/white"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/black"
        android:id="@+id/colorSelect"
        android:text="颜色选择"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/toastMessage"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:padding="5dp"
        style="@style/btnWhiteStyle"
        android:text="进入互动画板" />

</LinearLayout>
